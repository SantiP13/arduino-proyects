void dibujar(int caracter[0][8])
{
   // La función recibe el parámetro o letra y prende o apaga los focos necesarios
   
   for (int i=0; i<8; i++)
  {
    digitalWrite(fila[i], HIGH);
    for (int j=0; j<8; j++)
    
    {
      if (caracter[i][j] == 1)
      
      {
        digitalWrite(columna[j], LOW);  
      }
    }
    delay(2);
    digitalWrite(fila[i], LOW);
    for (int j=0; j<8; j++)
    {
      digitalWrite(columna[j], HIGH);
      
    }    
    
  }
  
}
